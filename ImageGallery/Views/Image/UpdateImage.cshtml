@using ImageGallary.Data.Model;
@model ImageGallary.Data.Model.GalleryImage
<div class="bg-primary m-1 p-1 text-white"><h4>Edit image</h4></div>
<div class="container body-content ">
    <form asp-action="UpdateImage" asp-controller="Image" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div>
            <label class="btn btn-file">
                <input type="file" name="uploadedFile" id="uploadedFile" style="display: marker" />
            </label>
        </div>
        <button asp-route-id="@Model.Id" type="submit" id="btn-upload" class="btn btn-outline-success">Simbit</button>
    </form>
</div>

</div>

