@model ImageGallery.Models.GalleryOnePictureViewModel
        
    <div class="container body-content">
        <div class="row image-detail-container">
            <div class="image-detail" style="background-image:url(@Model.Url)" alt="@Model.Title"></div>
        </div>
        <div class="row">
            <span>Author : @Model.UserName &nbsp </span>
            <span>Title :  @Model.Title &nbsp</span>
            <span>Upload :  @Model.DateTimeCreated</span>
        </div>
        <div class="row controls">
            <a class="btn btn-dark" asp-controller="ImageGallery" asp-action="Index">Return back</a>
        </div>
    </div>